@model MyDatabase.ViewModels.CustomerDetailsViewModel
@{
    Layout = "~/Views/_SharedLayout.cshtml";
}

<h2>List Of Customers</h2>

<p>
    @Html.ActionLink("Add New Customer", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Last Name")
        </th>
        <th>
            @Html.Label("Contact Number")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Customers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { customerId = item.CustomerId }) |
                @Html.ActionLink("Details", "Details", new { customerId = item.CustomerId }) |
                @Html.ActionLink("Delete", "Delete", new { customerId = item.CustomerId })
            </td>
        </tr>
    }

</table>
