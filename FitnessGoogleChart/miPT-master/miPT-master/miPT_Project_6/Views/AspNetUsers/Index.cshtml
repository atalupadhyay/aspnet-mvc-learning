@model IEnumerable<miPT_Project_6.Models.AspNetUsers>

@{
    ViewBag.Title = "Index";
}

<h2>Admin Dashboard</h2>

<p>
    @Html.ActionLink("View All Trainers", "Index", "Trainers", null, new { @class = "btn btn-info" })
    @Html.ActionLink("View All Clients", "Index", "ClientDetails", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Manage User Access", "Index", "AspNetUserRoles", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Add Workouts", "Index", "Workouts", null, new { @class = "btn btn-info" })


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Add as Trainer", "Create", "Trainers", new { Id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Add as Client", "Create", "ClientDetails", new { Id = item.Id }, new { @class = "btn btn-info" })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
