@model miPT_Project_6.Models.Measurements

@{
    ViewBag.Title = "ProgressCharts";
}

<h2>ProgressCharts</h2>

<h4>@ViewBag.Data</h4>
<script>
    var tempdata = @ViewBag.Data;
    var data = JSON.parse('@ViewBag.data');

</script>



<script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable(@ViewBag.Data);

        var options = {
          title: 'Weight Measurement',
          curveType: 'function',
          legend: { position: 'bottom' }
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

        chart.draw(data, options);
      }
</script>

<div id="curve_chart" style="width: 900px; height: 500px"></div>














